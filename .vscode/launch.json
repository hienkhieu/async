{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node Inspector",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "TS_NODE_IGNORE": "false"
      },
      "outputCapture": "std"
    }
  ]
}